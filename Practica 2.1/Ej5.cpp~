#include <time.h>
#include <stdio.h>
#include <locale.h>

int main(int argc, char** argv)
{
	setlocale(LC_ALL, "es_ES");
	time_t rawtime;
	tm * timeinfo;

  	time (&rawtime);
  	timeinfo = localtime (&rawtime);


	char buffer[80];

	strftime(buffer, 80, "Estamos en el a√±o %Y\n", timeinfo);
	strftime(buffer, 80, "Hoy es %A, %R", timeinfo);
	puts(buffer);
	//std::cin.get();
}
